{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": [
    // ...
    "react-hooks"
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-console": "warn",
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
  }
}